<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
    <org.fengwx.player.core.PlayerView
            android:id="@+id/player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="60dp">
        <Button
                android:text="btn1" android:layout_margin="5dp"
                android:layout_weight="1"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="btn1"/>
        <Button
                android:layout_weight="1"
                android:text="btn2" android:layout_margin="5dp"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="btn2"/>
        <Button
                android:layout_weight="1"
                android:text="btn3" android:layout_margin="5dp"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="btn3"/>
        <Button
                android:layout_weight="1"
                android:text="btn4" android:layout_margin="5dp"
                android:layout_width="match_parent" android:layout_height="wrap_content" android:onClick="btn4"/>
    </LinearLayout>

</RelativeLayout>

